<div class="mentor row">
	<div class="span3">
		<%= image_tag current_user.avatar.url(:thumb), class: 'img-rounded' %>
	</div>
    <div class="span9">

		<h3>Your mentees</h3>
        
		<ul class="nav nav-tabs">
		  <% current_user.mentees.each do |mentee| %>


		  <li>
		    <a href="#<%= mentee.id %>" data-toggle="tab"><%= mentee.email %></a>
		  </li>




		  <% end %>
		</ul>


		<div class="tab-content">
		<% current_user.mentees.each do |mentee| %>
		  

		  <div class="tab-pane" id="<%= mentee.id %>">
		    <% @previous_updates = mentee.updates  %>  
		    <%= render 'previous_updates' %>
		  </div>  

		<% end %>
		</div>
	</div>
</div>