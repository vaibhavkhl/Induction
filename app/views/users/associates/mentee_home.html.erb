<div class="mentee row">
	<div class="col-lg-2">
		<%= image_tag current_user.avatar.url(:medium), class: 'img-rounded' %>
		<div class="name"><%= current_user.name %></div>
		<div class="details">Mentor - <%= current_user.mentors.first.name %></div>
	</div>
	<div class="col-lg-10">
		<div class="update_form">
			<%= render 'updates/update' %>
		</div>
        <div class="updates_mentee" id="<%= current_user.id %>">
        
        <% print "------------------------inside div--------------"%>
		    <%= render 'updates/previous_updates' %>
		</div>
	</div>
</div>